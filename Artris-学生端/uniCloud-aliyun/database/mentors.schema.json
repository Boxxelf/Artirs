{
	"bsonType": "object",
	"required": ["name", "school", "price"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "导师姓名",
			"label": "姓名"
		},
		"avatar": {
			"bsonType": "string",
			"description": "头像URL",
			"label": "头像"
		},
		"school": {
			"bsonType": "string",
			"description": "毕业院校",
			"label": "院校"
		},
		"degree": {
			"bsonType": "string",
			"description": "学位",
			"label": "学位"
		},
		"major": {
			"bsonType": "string",
			"description": "专业",
			"label": "专业"
		},
		"experience": {
			"bsonType": "number",
			"description": "教学经验（年）",
			"label": "经验"
		},
		"price": {
			"bsonType": "number",
			"description": "价格（元/次）",
			"label": "价格"
		},
		"rating": {
			"bsonType": "number",
			"description": "评分",
			"label": "评分",
			"minimum": 0,
			"maximum": 5
		},
		"specialties": {
			"bsonType": "array",
			"description": "专业领域",
			"label": "专业领域",
			"items": {
				"bsonType": "string"
			}
		},
		"intro": {
			"bsonType": "string",
			"description": "导师简介",
			"label": "简介"
		},
		"available": {
			"bsonType": "bool",
			"description": "本周是否可约",
			"label": "可约状态",
			"default": false
		},
		"category": {
			"bsonType": "string",
			"description": "分类",
			"label": "分类"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
