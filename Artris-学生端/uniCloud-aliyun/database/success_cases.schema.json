{
	"bsonType": "object",
	"required": ["student_name", "school", "image"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"student_name": {
			"bsonType": "string",
			"description": "学生姓名",
			"label": "学生姓名"
		},
		"school": {
			"bsonType": "string",
			"description": "录取院校",
			"label": "院校"
		},
		"degree": {
			"bsonType": "string",
			"description": "学位",
			"label": "学位"
		},
		"image": {
			"bsonType": "string",
			"description": "图片URL",
			"label": "图片"
		},
		"mentor_id": {
			"bsonType": "string",
			"description": "导师ID",
			"label": "导师"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
